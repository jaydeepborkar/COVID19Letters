<%if(letters.length!=0){%>

<div class="b"><h4>We all are in this together</h4></div>

<div class="a"><h2><b>Latest Letters</b></h2></div>

<div class="container">
  <div class="card-columns">
    <% letters.forEach((letter)=>{ %>
      <div class="card bg-light">
          <ul class="list-group list-group-flush">
          <li class="list-group-item">From: <%= letter.from %> </li>
          <li class="list-group-item">TO: <%= letter.to%></li>
          </ul>
          <div class="card-body text-left">
          <p class="card-text">
            <%= letter.content.substring(0,100) %> ....
          </p>
          <a class="btn btn-primary "  href="/show/<%= letter._id%>">read more </a>
          </div>
          </div>
    <% }) %>
  </div>
</div>
<%}else{%>
  <div class="container" > 

    <h1 class="missing-country" > There are no letters written for this country yet. Please write one :) </h1>
  </div>
<% } %>
